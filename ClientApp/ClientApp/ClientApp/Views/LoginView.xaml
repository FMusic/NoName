<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ClientApp.Views.LoginView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="Center"  VerticalOptions="Center">
            <Entry x:Name="Email" Text="{Binding Username}" Placeholder="Username"   
                           PlaceholderColor="Red" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="Black"/>
            <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password"   
                           PlaceholderColor="Red" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="Black"/>
            <Button Command="{Binding SubmitCommand}" Text="Login" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>